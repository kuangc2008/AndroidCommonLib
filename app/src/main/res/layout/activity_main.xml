<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_to_bitmap"
        app:layout_constraintTop_toBottomOf="@id/toast_utils"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Text to Bitmap"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/toast_utils"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Toast utils"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/water_anim"
        app:layout_constraintTop_toBottomOf="@id/text_to_bitmap"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Progress"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>